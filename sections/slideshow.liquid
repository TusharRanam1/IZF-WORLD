<div id="section-id-{{ section.id }}" data-section-type="slideshow" data-cc-animate {% if section.settings.full_width %}class="needs-alt-logo"{% endif %}>
  {% style %}
  
    {%- if section.settings.height == 'fixed' -%}
      #section-id-{{ section.id }} .rimage-outer-wrapper,
      #section-id-{{ section.id }} .placeholder-image {
        height: {{ section.settings.height_mobile }}px;
      }
    {%- endif -%}
    {% for block in section.blocks %}
      #section-id-{{ section.id }} .slide-{{ forloop.index }} .line-1 {
        max-width: {{ block.settings.title_width }}em;
      }
    {% endfor %}

    @media (min-width: 768px) {
      {%- if section.settings.height == 'fixed' -%}
        #section-id-{{ section.id }} .rimage-outer-wrapper ,
        #section-id-{{ section.id }} .placeholder-image {
          height: {{ section.settings.height_desktop }}px;
        }
      {%- endif -%}

      {% for block in section.blocks %}
        #section-id-{{ section.id }} .slide-{{ forloop.index }} .line-1 {
          {%- assign title_size_medium = block.settings.title_size | times: 0.7 | at_least: settings.font_size_heading_int -%}
          font-size: {{ title_size_medium }}px;
        }
      {% endfor %}
    }

    @media (min-width: 992px) {
      {% for block in section.blocks %}
        #section-id-{{ section.id }} .slide-{{ forloop.index }} .line-1 {
          font-size: {{ block.settings.title_size }}px;
        }
        #section-id-{{ section.id }} .slide-{{ forloop.index }} .overlay__content {
          max-width: {{ block.settings.content_max_width }}px;
        }
      {% endfor %}
    }

    {% for block in section.blocks %}
      #section-id-{{ section.id }} .slide-{{ forloop.index }} .button-1-custom {
        {% if block.settings.button_1_style == 'button--solid' %}
          background-color: {{ block.settings.button_1_bg_color }} !important;
          border-color: {{ block.settings.button_1_bg_color }} !important;
        {% else %}
          background-color: transparent !important;
          border-color: {{ block.settings.button_1_bg_color }} !important;
        {% endif %}
        color: {{ block.settings.button_1_text_color }} !important;
      }
      #section-id-{{ section.id }} .slide-{{ forloop.index }} .button-2-custom {
        {% if block.settings.button_2_style == 'button--solid' %}
          background-color: {{ block.settings.button_2_bg_color }} !important;
          border-color: {{ block.settings.button_2_bg_color }} !important;
        {% else %}
          background-color: transparent !important;
          border-color: {{ block.settings.button_2_bg_color }} !important;
        {% endif %}
        color: {{ block.settings.button_2_text_color }} !important;
      }
    {% endfor %}

    .slideshow-buttons {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      margin-top: 20px;
    }
    
    .position--hcenter .overlay__content { margin-left: auto; margin-right: auto; text-align: center; }
    .position--hcenter .slideshow-buttons { justify-content: center; }
    .position--left .overlay__content { margin-right: auto; text-align: left; }
    .position--left .slideshow-buttons { justify-content: flex-start; }
    .position--right .overlay__content { margin-left: auto; text-align: right; }
    .position--right .slideshow-buttons { justify-content: flex-end; }
    
    @media (max-width: 767px) {
      .position--hcenter-xs .overlay__content { margin-left: auto; margin-right: auto; text-align: center; }
      .position--hcenter-xs .slideshow-buttons { justify-content: center; }
      .position--left-xs .overlay__content { margin-right: auto; text-align: left; }
      .position--left-xs .slideshow-buttons { justify-content: flex-start; }
      .position--right-xs .overlay__content { margin-left: auto; text-align: right; }
      .position--right-xs .slideshow-buttons { justify-content: flex-end; }
    }

    .slide {
      position: relative;
    }
    .slide-link-main {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }
    .overlay {
      z-index: 2;
    }
  {% endstyle %}

  {%- comment -%} Preload first slide (desktop + mobile) {%- endcomment -%}
  {%- assign __first = section.blocks.first -%}
  {%- if __first and __first.settings.image -%}
    {%- assign first_desktop = __first.settings.image -%}
    <link rel="preload" as="image"
          href="{{ first_desktop | image_url: width: 1600 }}"
          imagesrcset="
            {{ first_desktop | image_url: width: 768 }} 768w,
            {{ first_desktop | image_url: width: 1200 }} 1200w,
            {{ first_desktop | image_url: width: 1600 }} 1600w"
          imagesizes="(min-width: 768px) 100vw, 0vw" fetchpriority="high">
  {%- endif -%}
  {%- if __first and __first.settings.mobile_image -%}
    {%- assign first_mobile = __first.settings.mobile_image -%}
    <link rel="preload" as="image"
          href="{{ first_mobile | image_url: width: 1024 }}"
          imagesrcset="
            {{ first_mobile | image_url: width: 480 }} 480w,
            {{ first_mobile | image_url: width: 768 }} 768w,
            {{ first_mobile | image_url: width: 1024 }} 1024w"
          imagesizes="(max-width: 767px) 100vw, 0vw" fetchpriority="high">
  {%- endif -%}

  {%- unless section.settings.full_width -%}<div class="wide-container half-gutter section-spacing">{%- endunless -%}

    <div class="slideshow
        slideshow--navigation-{{ section.settings.slide_navigation }}
        slick-slider-overlay-dots-desktop
        {% if section.settings.mobile_overlay_under %}slick-slider-dots-light-xs{% endif %}
        {% unless section.settings.mobile_overlay_under %}slick-slider-overlay-dots{% endunless %}"

       data-transition="{{ section.settings.slide_transition }}"
       data-autoplay="{{ section.settings.autoplay }}"
       data-autoplay-speed="{{ section.settings.autoplay_speed }}"
       data-navigation="{{ section.settings.slide_navigation }}">

    {% for block in section.blocks %}
      {%- liquid
        assign show_overlay_text = false
        if block.settings.title != blank or block.settings.subheading != blank or block.settings.text != blank or block.settings.button_label != blank
          assign show_overlay_text = true
        endif

        assign heading_tag = "h2"
        if block.settings.heading_h1
          assign heading_tag = "h1"
        endif
      -%}

      <div class="slide slide-{{ forloop.index }} height--{{ section.settings.height }} image-overlay {% if section.settings.overlay_style_tint %}image-overlay--bg-full{% endif %} {% if section.settings.mobile_overlay_under %}overlay-text-static-xs{% endif %}" {{ block.shopify_attributes }}>
        {%- if block.settings.slide_link != blank -%}
          <a class="slide-link-main" data-cc-animate-click href="{{ block.settings.slide_link }}" {% if block.settings.button_label == blank and block.settings.button_2_label == blank %}style="z-index: 3;"{% endif %}></a>
        {%- endif -%}

        {% if block.settings.image != blank %}
          <div class="rimage-outer-wrapper {% if section.settings.height == 'full' %}fill-viewport{% endif %} {% if block.settings.mobile_image != blank %}desktop-only{% endif %} {% unless forloop.first %}fade-in{% endunless %}"
               style="background-color: #f4f4f4;">
            {%- if section.settings.height == 'adapt' -%}
              {%- assign aspect_ratio = section.blocks.first.settings.image.aspect_ratio | default: 2.0 -%}
              <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: aspect_ratio | times: 100 }}%"></div>
            {%- endif -%}

            <img
              src="{{ block.settings.image | image_url: width: 1600 }}"
              srcset="
                {{ block.settings.image | image_url: width: 768 }} 768w,
                {{ block.settings.image | image_url: width: 1200 }} 1200w,
                {{ block.settings.image | image_url: width: 1600 }} 1600w"
              sizes="(min-width: 768px) 100vw, 0vw"
              alt="{{ block.settings.image.alt | escape }}"
              width="1600"
              height="{{ 1600 | divided_by: block.settings.image.aspect_ratio | round }}"
              {% if forloop.first %}loading="eager" fetchpriority="high"{% else %}loading="lazy" fetchpriority="low"{% endif %}
              decoding="async"
              class="rimage__image"
              style="position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover;" />

            <noscript>
              <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%">
                <img src="{{ block.settings.image | img_url: '1600x1600' }}"
                     alt="{{ block.settings.image.alt | escape }}"
                     {% if forloop.first %}fetchpriority="high" loading="eager"{% endif %}
                     width="1600"
                     height="{{ 1600 | divided_by: block.settings.image.aspect_ratio | round }}"
                     class="rimage__image" />
              </div>
            </noscript>
          </div>

          {% if block.settings.mobile_image != blank %}
            <div class="rimage-outer-wrapper mobile-only {% if section.settings.height == 'full' %}fill-viewport{% endif %} {% unless forloop.first %}fade-in{% endunless %}"
                 style="background-color: #f4f4f4;">
              {%- if section.settings.height == 'adapt' -%}
                {%- assign aspect_ratio = section.blocks.first.settings.mobile_image.aspect_ratio | default: 2.0 -%}
                <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: aspect_ratio | times: 100 }}%"></div>
              {%- endif -%}

              <img
                src="{{ block.settings.mobile_image | image_url: width: 1024 }}"
                srcset="
                  {{ block.settings.mobile_image | image_url: width: 480 }} 480w,
                  {{ block.settings.mobile_image | image_url: width: 768 }} 768w,
                  {{ block.settings.mobile_image | image_url: width: 1024 }} 1024w"
                sizes="(max-width: 767px) 100vw, 0vw"
                alt="{{ block.settings.mobile_image.alt | escape }}"
                {% if forloop.first %}loading="eager" fetchpriority="high"{% else %}loading="lazy" fetchpriority="low"{% endif %}
                decoding="async"
                class="rimage__image"
                style="position:absolute; inset:0; width:100%; height:100%; object-fit:cover;" />

              <noscript>
                <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.mobile_image.aspect_ratio | times: 100 }}%">
                  <img src="{{ block.settings.mobile_image | img_url: '1024x1024' }}"
                       alt="{{ block.settings.mobile_image.alt | escape }}"
                       {% if forloop.first %}fetchpriority="high" loading="eager"{% endif %}
                       class="rimage__image" />
                </div>
              </noscript>
            </div>
          {% endif %}
        {% else %}
          <div class="rimage-outer-wrapper lazyload--manual fade-in placeholder-image placeholder--banner
            {% if block.settings.title != blank or block.settings.subheading != blank %}dark{% endif %}"
            {% if section.settings.height == 'adapt' %}style="padding-top: 50%"{% endif %}
          >
            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}

        {%- if show_overlay_text -%}
          <div class="overlay-type overlay {{ block.settings.overlay_position }} {{ block.settings.overlay_position_mobile }}">
            <div class="inner">
              <div>
                <div class="overlay__content">
                  {%- if block.settings.subheading != blank -%}
                    <div class="feature-subheader">
                      {{ block.settings.subheading }}
                    </div>
                  {% endif %}

                  {%- if block.settings.title != blank -%}
                    <{{ heading_tag }} class="line-1 {% if block.settings.title_size >= 86 %}line-1--large{% endif %}">
                      {{ block.settings.title }}
                    </{{ heading_tag }}>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div class="rte line-2 {% if block.settings.enlarge_text %}large-text{% endif %}">
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.button_label != blank or block.settings.button_2_label != blank -%}
                    <div class="line-3 slideshow-buttons">
                      {%- if block.settings.button_label != blank -%}
                        <a data-cc-animate-click href="{{ block.settings.button_1_link | default: block.settings.slide_link }}" class="button {{ block.settings.button_1_style }} button-1-custom">
                          {{ block.settings.button_label | escape }}
                        </a>
                      {%- endif -%}
                      {%- if block.settings.button_2_label != blank -%}
                        <a data-cc-animate-click href="{{ block.settings.button_2_link | default: block.settings.slide_link }}" class="button {{ block.settings.button_2_style }} button-2-custom">
                          {{ block.settings.button_2_label | escape }}
                        </a>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {% endif %}

      </div>

    {% endfor %}

    {%- unless section.settings.full_width -%}</div>{%- endunless -%}
  </div>
</div>


{% schema %}
  {
    "name": "Slideshow",
    "class": "section-slideshow header-overlap-section",
    "max_blocks": 8,
    "settings": [
      {
        "type": "radio",
        "id": "height",
        "label": "Slide height",
        "options": [
          {
            "value": "adapt",
            "label": "Adapt to first image"
          },
          {
            "value": "full",
            "label": "Full screen"
          },
          {
            "value": "fixed",
            "label": "Fixed height"
          }
        ],
        "default": "fixed"
      },
      {
        "type": "range",
        "id": "height_desktop",
        "min": 200,
        "max": 1000,
        "step": 20,
        "unit": "px",
        "label": "Desktop fixed height",
        "default": 600
      },
      {
        "type": "range",
        "id": "height_mobile",
        "min": 100,
        "max": 1000,
        "step": 20,
        "unit": "px",
        "label": "Mobile fixed height",
        "default": 500
      },
      {
        "id": "full_width",
        "type": "checkbox",
        "label": "Full page width",
        "default": true
      },
      {
        "id": "mobile_overlay_under",
        "type": "checkbox",
        "label": "Show text below image on mobile",
        "default": false
      },
      {
        "id": "overlay_style_tint",
        "type": "checkbox",
        "label": "Show overlay tint",
        "default": true
      },
      {
        "type": "header",
        "content": "Slideshow navigation"
      },
      {
        "type": "select",
        "id": "slide_transition",
        "label": "Transition",
        "options": [
          {
            "value": "zoom",
            "label": "Zoom"
          },
          {
            "value": "slide",
            "label": "Slide"
          },
          {
            "value": "fade",
            "label": "Fade"
          },
          {
            "value": "instant",
            "label": "Instant"
          }
        ],
        "default": "slide"
      },
      {
        "id": "slide_navigation",
        "type": "select",
        "label": "Slide navigation style",
        "default": "dots",
        "options": [
          {
            "value": "arrows",
            "label": "Arrows"
          },
          {
            "value": "dots",
            "label": "Dots"
          },
          {
            "value": "none",
            "label": "None"
          }
        ],
        "info": "Navigation will always display as dots on mobile."
      },
      {
        "id": "autoplay",
        "type": "checkbox",
        "label": "Auto-rotate slides",
        "default": true
      },
      {
        "type": "range",
        "id": "autoplay_speed",
        "min": 1,
        "max": 20,
        "step": 1,
        "unit": "s",
        "label": "Change slides every",
        "default": 7
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "2048 x 1024px recommended"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile image",
            "info": "1024px x 1024px recommended"
          },
          {
            "type": "url",
            "id": "slide_link",
            "label": "Slide link"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Subheading",
            "default": "Subheading"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Slideshow"
          },
          {
            "type": "range",
            "id": "title_size",
            "min": 20,
            "max": 150,
            "step": 2,
            "unit": "px",
            "label": "Heading text size",
            "default": 60
          },
          {
            "type": "range",
            "id": "title_width",
            "min": 4,
            "max": 40,
            "step": 2,
            "unit": "em",
            "label": "Maximum heading width",
            "default": 12
          },
          {
            "type": "checkbox",
            "id": "heading_h1",
            "label": "Set as primary page heading",
            "info": "Uses <h1> tag. One per page recommended. [Learn more](https://cleancanvas.co.uk/support/showcase/seo#inner-anchor-0)",
            "default": false
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>and optional subtext</p>"
          },
          {
            "type": "range",
            "id": "content_max_width",
            "min": 400,
            "max": 1200,
            "step": 20,
            "unit": "px",
            "label": "Content maximum width",
            "default": 780
          },
          {
            "type": "checkbox",
            "id": "enlarge_text",
            "label": "Enlarge text",
            "default": true
          },
          {
            "type": "header",
            "content": "Button 1"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Text",
            "default": "Button 1"
          },
          {
            "type": "url",
            "id": "button_1_link",
            "label": "Link"
          },
          {
            "type": "select",
            "id": "button_1_style",
            "label": "Style",
            "options": [
              { "value": "button--solid", "label": "Solid button" },
              { "value": "button--outline", "label": "Outline button" }
            ],
            "default": "button--solid"
          },
          {
            "type": "color",
            "id": "button_1_bg_color",
            "label": "Background",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "button_1_text_color",
            "label": "Text",
            "default": "#ffffff"
          },
          {
            "type": "header",
            "content": "Button 2"
          },
          {
            "type": "text",
            "id": "button_2_label",
            "label": "Text",
            "default": "Button 2"
          },
          {
            "type": "url",
            "id": "button_2_link",
            "label": "Link"
          },
          {
            "type": "select",
            "id": "button_2_style",
            "label": "Style",
            "options": [
              { "value": "button--solid", "label": "Solid button" },
              { "value": "button--outline", "label": "Outline button" }
            ],
            "default": "button--outline"
          },
          {
            "type": "color",
            "id": "button_2_bg_color",
            "label": "Background",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "button_2_text_color",
            "label": "Text",
            "default": "#000000"
          },
          {
            "type": "select",
            "id": "overlay_position",
            "label": "Desktop content position",
            "options": [
              { "value": "position--left position--top", "label": "Top left" },
              { "value": "position--hcenter position--top", "label": "Top center" },
              { "value": "position--right position--top", "label": "Top right" },
              { "value": "position--left position--vcenter", "label": "Middle left" },
              { "value": "position--hcenter position--vcenter", "label": "Middle center" },
              { "value": "position--right position--vcenter", "label": "Middle right" },
              { "value": "position--left position--bottom", "label": "Bottom left" },
              { "value": "position--hcenter position--bottom", "label": "Bottom center" },
              { "value": "position--right position--bottom", "label": "Bottom right" }
            ],
            "default": "position--hcenter position--vcenter"
          },
          {
            "type": "select",
            "id": "overlay_position_mobile",
            "label": "Mobile content position",
            "options": [
              { "value": "position--left-xs position--top-xs", "label": "Top left" },
              { "value": "position--hcenter-xs position--top-xs", "label": "Top center" },
              { "value": "position--right-xs position--top-xs", "label": "Top right" },
              { "value": "position--left-xs position--vcenter-xs", "label": "Middle left" },
              { "value": "position--hcenter-xs position--vcenter-xs", "label": "Middle center" },
              { "value": "position--right-xs position--vcenter-xs", "label": "Middle right" },
              { "value": "position--left-xs position--bottom-xs", "label": "Bottom left" },
              { "value": "position--hcenter-xs position--bottom-xs", "label": "Bottom center" },
              { "value": "position--right-xs position--bottom-xs", "label": "Bottom right" }
            ],
            "default": "position--hcenter-xs position--bottom-xs"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slideshow",
        "settings": {},
        "blocks": [
          { "type": "image" },
          { "type": "image" },
          { "type": "image" }
        ]
      }
    ]
  }
{% endschema %}
