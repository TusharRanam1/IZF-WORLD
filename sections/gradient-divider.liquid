<!-- sections/gradient-divider.liquid -->
<div class="smooth-gradient-divider"></div>

<style>
  .smooth-gradient-divider {
    width: 100%;
    height: {{ section.settings.height }}px;
    background: linear-gradient(to bottom, {{ section.settings.color_top }} 0%, {{ section.settings.color_mid }} 50%, {{ section.settings.color_bottom }} 100%);
  }
</style>

{% schema %}
{
  "name": "Smooth Gradient Divider",
  "settings": [
    {
      "type": "range",
      "id": "height",
      "label": "Height (px)",
      "min": 50,
      "max": 400,
      "step": 10,
      "default": 180
    },
    {
      "type": "color",
      "id": "color_top",
      "label": "Top Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "color_mid",
      "label": "Middle Fade",
      "default": "#F6F3FF"
    },
    {
      "type": "color",
      "id": "color_bottom",
      "label": "Bottom Color",
      "default": "#D4C7FF"
    }
  ],
  "presets": [
    {
      "name": "Smooth Gradient Divider",
      "category": "Layout"
    }
  ]
}
{% endschema %}
